<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rejoindre une session - WANEJ</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('partials/dashboard-header', { 
            title: 'Rejoindre une session', 
            showPoints: false,
            backLink: { url: '/dashboard', text: 'Retour au dashboard' }
        }) %>
        
        <div class="dashboard-content">
            <div class="team-form-container">
                <div class="team-form-box">
                    <div class="form-header">
                        <img src="/uploads/wanej-logo-html-css.png" alt="Logo WANEJ" class="login-logo">
                        <h1>üéÆ Rejoindre une session</h1>
                        <p>Saisissez le code de session pour acc√©der aux activit√©s</p>
                    </div>

                    <form class="team-form" id="sessionForm">
                        <div id="message" class="error-message" style="display: none;"></div>
                        
                        <div class="form-group" id="sessionCodeGroup">
                            <label for="sessionCode">Code de session *</label>
                            <input type="text" id="sessionCode" name="sessionCode" 
                                   placeholder="Ex: DEMO2025" required maxlength="20"
                                   style="text-transform: uppercase;">
                            <small>Le code vous a √©t√© fourni par l'organisateur de la session</small>
                        </div>
                        
                        <button type="submit" id="joinSessionBtn" class="btn btn-primary">
                            Rejoindre la session
                        </button>
                        
                        <div id="sessionInfo" class="session-info" style="display: none;">
                            <h3>Session actuelle</h3>
                            <div id="sessionDetails"></div>
                            <button type="button" id="leaveSessionBtn" class="btn btn-secondary">
                                Quitter la session
                            </button>
                        </div>
                        
                        <div class="form-links">
                            <a href="/dashboard">Retour au dashboard</a>
                            <a href="/activities">Voir les activit√©s</a>
                        </div>
                    </form>
                </div>
            </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sessionForm = document.getElementById('sessionForm');
            const sessionCodeInput = document.getElementById('sessionCode');
            const sessionCodeGroup = document.getElementById('sessionCodeGroup');
            const joinSessionBtn = document.getElementById('joinSessionBtn');
            const leaveSessionBtn = document.getElementById('leaveSessionBtn');
            const sessionInfo = document.getElementById('sessionInfo');
            const sessionDetails = document.getElementById('sessionDetails');
            const message = document.getElementById('message');

            // V√©rifier si l'utilisateur a d√©j√† une session
            checkCurrentSession();

            // G√©rer la soumission du formulaire
            sessionForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const code = sessionCodeInput.value.trim();
                if (!code) {
                    showMessage('Veuillez saisir un code de session', 'error');
                    return;
                }
                joinSession(code);
            });

            leaveSessionBtn.addEventListener('click', function() {
                leaveSession();
            });

            function showMessage(text, type) {
                message.textContent = text;
                message.className = type === 'success' ? 'success-message' : 'error-message';
                message.style.display = 'block';
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            }

            function checkCurrentSession() {
                fetch('/api/game-session/current')
                    .then(response => response.json())
                    .then(data => {
                        if (data.gameSession) {
                            displayCurrentSession(data.gameSession);
                        }
                    })
                    .catch(error => {
                        console.log('Aucune session active');
                    });
            }

            function displayCurrentSession(session) {
                sessionDetails.innerHTML = `
                    <div class="session-details">
                        <p><strong>Nom:</strong> ${session.name}</p>
                        <p><strong>Code:</strong> ${session.code}</p>
                        <p><strong>Description:</strong> ${session.description || 'Aucune description'}</p>
                        ${session.startDate ? `<p><strong>D√©but:</strong> ${new Date(session.startDate).toLocaleDateString('fr-FR')}</p>` : ''}
                        ${session.endDate ? `<p><strong>Fin:</strong> ${new Date(session.endDate).toLocaleDateString('fr-FR')}</p>` : ''}
                    </div>
                `;
                sessionInfo.style.display = 'block';
                sessionCodeGroup.style.display = 'none';
                joinSessionBtn.style.display = 'none';
            }

            function joinSession(code) {
                fetch('/api/game-session/join', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ code: code })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        showMessage(data.error, 'error');
                    } else {
                        showMessage('Session rejointe avec succ√®s! Vous pouvez maintenant acc√©der aux activit√©s.', 'success');
                        displayCurrentSession(data.gameSession);
                        // Rediriger vers le dashboard apr√®s un court d√©lai
                        setTimeout(() => {
                            window.location.href = '/dashboard';
                        }, 2000);
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    showMessage('Erreur lors de la connexion √† la session', 'error');
                });
            }

            function leaveSession() {
                if (!confirm('√ätes-vous s√ªr de vouloir quitter cette session ?')) {
                    return;
                }
                
                fetch('/api/game-session/leave', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        showMessage(data.error, 'error');
                    } else {
                        showMessage('Session quitt√©e avec succ√®s', 'success');
                        sessionInfo.style.display = 'none';
                        sessionCodeGroup.style.display = 'block';
                        joinSessionBtn.style.display = 'inline-block';
                        sessionCodeInput.value = '';
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    showMessage('Erreur lors de la sortie de session', 'error');
                });
            }
        });
    </script>
        </div>
    </div>
</body>
</html>
