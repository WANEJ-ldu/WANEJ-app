<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>WANEJ - Créer une équipe</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="team-form-container">
        <div class="team-form-box">
            <div class="form-header">
                <img src="/uploads/wanej-logo-html-css.png" alt="Logo WANEJ" class="login-logo">
                <h1>Créer une équipe</h1>
                <p>Formez votre équipe pour les défis WANEJ</p>
            </div>
            
            <form class="team-form" id="createTeamForm">
                <div id="error-message" class="error-message" style="display: none;"></div>
                
                <div class="form-group">
                    <label for="name">Nom de l'équipe *</label>
                    <input type="text" id="name" name="name" required maxlength="50" 
                           placeholder="Entrez le nom de votre équipe">
                </div>
                
                <div class="form-group">
                    <label for="description">Description (optionnel)</label>
                    <textarea id="description" name="description" maxlength="500" rows="3"
                              placeholder="Décrivez votre équipe..."></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary">Créer l'équipe</button>
                
                <div class="form-links">
                    <a href="/dashboard">Retour au dashboard</a>
                    <a href="/team/join">Rejoindre une équipe</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('createTeamForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            
            try {
                const response = await fetch('/api/team/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert(`Équipe créée avec succès ! Code de l'équipe: ${result.team.code}`);
                    window.location.href = '/dashboard';
                } else {
                    const errorDiv = document.getElementById('error-message');
                    errorDiv.style.display = 'block';
                    errorDiv.textContent = result.error || 'Erreur lors de la création de l\'équipe';
                }
            } catch (error) {
                const errorDiv = document.getElementById('error-message');
                errorDiv.style.display = 'block';
                errorDiv.textContent = 'Erreur de connexion';
            }
        });
    </script>
</body>
</html>
